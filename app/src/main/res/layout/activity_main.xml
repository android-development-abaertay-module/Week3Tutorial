<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_digits_only"
            android:inputType="number"/>
        <Button
            android:id="@+id/startTimerBtn"
            android:onClick="startTimer_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_timer"/>
        <Button
            android:id="@+id/dialNumberBtn"
            android:onClick="dialNumber_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dial_number"/>
        <Button
            android:id="@+id/openBrowserBtn"
            android:onClick="openBrowser_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_browser"/>
        <Button
            android:id="@+id/showMapBtn"
            android:onClick="showMap_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_map"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>